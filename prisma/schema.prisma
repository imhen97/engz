datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String            @id @default(cuid())
  name               String?
  email              String?           @unique
  emailVerified      DateTime?
  image              String?
  provider           String?
  plan               String            @default("free")
  trialActive        Boolean           @default(false)
  trialEndsAt        DateTime?
  subscriptionActive Boolean           @default(false)
  subscriptionId     String?
  stripeCustomerId   String?
  currentCourseId    String?
  currentCourse      Course?           @relation("CurrentCourse", fields: [currentCourseId], references: [id])
  currentRoutineId   String?
  currentRoutine     Routine?          @relation("CurrentRoutine", fields: [currentRoutineId], references: [id])
  accounts           Account[]
  sessions           Session[]
  enrollments        Enrollment[]
  feedbackSessions   FeedbackSession[]
  reports            WeeklyReport[]
  routines           Routine[]         @relation("UserRoutines")
  levelTestResults   LevelTestResult[]
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id            String         @id @default(cuid())
  slug          String         @unique
  title         String
  description   String
  durationWeeks Int            @default(4)
  level         String
  type          String
  lessons       Lesson[]
  enrollments   Enrollment[]
  currentUsers  User[]         @relation("CurrentCourse")
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  weeklyReports WeeklyReport[]
}

model Lesson {
  id               String            @id @default(cuid())
  course           Course            @relation(fields: [courseId], references: [id])
  courseId         String
  week             Int
  day              Int
  title            String
  contentType      String
  contentUrl       String?
  prompt           String?
  feedbackSessions FeedbackSession[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

model Enrollment {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  course      Course   @relation(fields: [courseId], references: [id])
  courseId    String
  startedAt   DateTime @default(now())
  currentWeek Int      @default(1)
  currentDay  Int      @default(1)
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, courseId])
}

model FeedbackSession {
  id                 String   @id @default(cuid())
  user               User     @relation(fields: [userId], references: [id])
  userId             String
  lesson             Lesson   @relation(fields: [lessonId], references: [id])
  lessonId           String
  inputText          String?
  audioUrl           String?
  pronunciationScore Int?
  grammarScore       Int?
  fluencyScore       Int?
  expressionScore    Int?
  feedbackText       String?
  correctionsJson    String?
  createdAt          DateTime @default(now())
}

model WeeklyReport {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  course    Course   @relation(fields: [courseId], references: [id])
  courseId  String
  week      Int
  summary   String
  dataJson  String
  createdAt DateTime @default(now())
}

// PRD: Routine, Mission, Report models
model Routine {
  id           String    @id @default(cuid())
  userId       String
  theme        String // "Grammar", "Slang", "Business", "Travel", etc.
  startDate    DateTime
  endDate      DateTime
  completed    Boolean   @default(false)
  missions     Mission[]
  report       Report?
  user         User      @relation("UserRoutines", fields: [userId], references: [id])
  currentUsers User[]    @relation("CurrentRoutine")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Mission {
  id         String   @id @default(cuid())
  routineId  String
  week       Int
  day        Int
  content    String
  aiFeedback String?
  completed  Boolean  @default(false)
  routine    Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Report {
  id          String   @id @default(cuid())
  routineId   String   @unique
  summary     String
  scoreChange Float
  routine     Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
}

// PRD: Level Test Result model
model LevelTestResult {
  id                 String   @id @default(cuid())
  userId             String
  levelSelected      String // "beginner", "intermediate", "advanced"
  vocabScore         Int
  grammarScore       Int
  writingScore       Int
  overallLevel       String
  strengths          String?
  weaknesses         String?
  recommendedRoutine String?
  aiFeedback         String? @db.Text
  aiPlan             String? @db.Text
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt          DateTime @default(now())
}
