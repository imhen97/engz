generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String            @id @default(cuid())
  email              String?           @unique
  name               String?
  image              String?
  provider           String?
  plan               String            @default("free")
  trialActive        Boolean           @default(false)
  trialEndsAt        DateTime?
  subscriptionActive Boolean           @default(false)
  subscriptionId     String?
  stripeCustomerId   String?
  currentCourseId    String?
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  emailVerified      DateTime?
  currentRoutineId   String?
  role               String?
  accounts           Account[]
  enrollments        Enrollment[]
  feedbackSessions   FeedbackSession[]
  levelTestResults   LevelTestResult[]
  routines           Routine[]         @relation("UserRoutines")
  sessions           Session[]
  currentCourse      Course?           @relation("CurrentCourse", fields: [currentCourseId], references: [id])
  currentRoutine     Routine?          @relation("CurrentRoutine", fields: [currentRoutineId], references: [id])
  reports            WeeklyReport[]
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id            String         @id @default(cuid())
  slug          String         @unique
  title         String
  description   String
  durationWeeks Int            @default(4)
  level         String
  type          String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  enrollments   Enrollment[]
  lessons       Lesson[]
  currentUsers  User[]         @relation("CurrentCourse")
  weeklyReports WeeklyReport[]
}

model Lesson {
  id               String            @id @default(cuid())
  courseId         String
  week             Int
  day              Int
  title            String
  contentType      String
  contentUrl       String?
  prompt           String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  feedbackSessions FeedbackSession[]
  course           Course            @relation(fields: [courseId], references: [id])
}

model Enrollment {
  id          String   @id @default(cuid())
  userId      String
  courseId    String
  startedAt   DateTime @default(now())
  currentWeek Int      @default(1)
  currentDay  Int      @default(1)
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  course      Course   @relation(fields: [courseId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
}

model FeedbackSession {
  id                 String   @id @default(cuid())
  userId             String
  lessonId           String
  inputText          String?
  audioUrl           String?
  pronunciationScore Int?
  grammarScore       Int?
  fluencyScore       Int?
  expressionScore    Int?
  feedbackText       String?
  correctionsJson    String?
  createdAt          DateTime @default(now())
  lesson             Lesson   @relation(fields: [lessonId], references: [id])
  user               User     @relation(fields: [userId], references: [id])
}

model WeeklyReport {
  id        String   @id @default(cuid())
  userId    String
  courseId  String
  week      Int
  summary   String
  dataJson  String
  createdAt DateTime @default(now())
  course    Course   @relation(fields: [courseId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}

model Routine {
  id           String    @id @default(cuid())
  userId       String
  theme        String
  startDate    DateTime
  endDate      DateTime
  completed    Boolean   @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  missions     Mission[]
  report       Report?
  user         User      @relation("UserRoutines", fields: [userId], references: [id])
  currentUsers User[]    @relation("CurrentRoutine")
}

model Mission {
  id         String   @id @default(cuid())
  routineId  String
  week       Int
  day        Int
  content    String
  aiFeedback String?
  completed  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  routine    Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
}

model Report {
  id          String   @id @default(cuid())
  routineId   String   @unique
  summary     String
  scoreChange Float
  createdAt   DateTime @default(now())
  routine     Routine  @relation(fields: [routineId], references: [id], onDelete: Cascade)
}

model LevelTestResult {
  id                 String   @id @default(cuid())
  userId             String
  levelSelected      String?
  vocabScore         Int
  grammarScore       Int
  writingScore       Int
  overallLevel       String
  strengths          String?
  weaknesses         String?
  recommendedRoutine String?
  aiFeedback         String?
  aiPlan             String?
  createdAt          DateTime @default(now())
  totalScore         Int      @default(0)
  avgSpeed           Float?
  rankPercent        Int?
  aiMent             String?
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model AdminUser {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("admin")
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Log {
  id        String   @id @default(cuid())
  type      String
  message   String
  metadata  String?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
